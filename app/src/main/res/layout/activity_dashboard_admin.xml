<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.activity.dashboard.admin.DashboardAdminActivity">

    <!-- Tempat Fragment -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Start custom bottom navigation bar -->
    <LinearLayout
        android:id="@+id/customBottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_corner_radius_all_fill_sec_white"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/nav_dashboard" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/icon_dashboard"
                android:src="@drawable/ic_home"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_dashboard"
                android:fontFamily="@font/helvetica"
                android:textColor="@color/sec_blue"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Dashboard" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/nav_activity" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/icon_activity"
                android:src="@drawable/ic_activity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_activity"
                android:fontFamily="@font/helvetica"
                android:textColor="@color/sec_blue"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Kegiatan" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/nav_schedule" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/icon_schedule"
                android:src="@drawable/ic_schedule"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_schedule"
                android:fontFamily="@font/helvetica"
                android:textColor="@color/sec_blue"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Jadwal" />

        </LinearLayout>


    </LinearLayout>
    <!-- End custom bottom navigation bar -->


</LinearLayout>