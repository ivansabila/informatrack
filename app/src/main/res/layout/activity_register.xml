<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="40dp"
    android:paddingHorizontal="28dp"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".view.activity.auth.RegisterActivity">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/_logo_white"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner_radius_all_logo"
        android:padding="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="28dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/dark_blue"
            android:textSize="44dp"
            android:lineHeight="40dp"
            android:text="Daftar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:textColor="@color/sec_blue"
            android:layout_marginTop="-12dp"
            android:textSize="16dp"
            android:text="Silahkan lengkapi data berikut ini" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/dark_blue"
            android:textSize="14dp"
            android:text="Nama Lengkap" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etName"
            android:inputType="text"
            android:textSize="16dp"
            android:textColorHint="@color/sec_blue"
            android:textColor="@color/black"
            android:paddingVertical="13dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/helvetica"
            android:hint="Masukkan Nama lengkap"
            android:background="@drawable/bg_corner_radius_all_input" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/dark_blue"
            android:textSize="14dp"
            android:text="NIM" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etStudentId"
            android:inputType="number"
            android:textSize="16dp"
            android:textColorHint="@color/sec_blue"
            android:textColor="@color/black"
            android:paddingVertical="13dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/helvetica"
            android:hint="Masukkan NIM"
            android:background="@drawable/bg_corner_radius_all_input"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/dark_blue"
            android:textSize="14dp"
            android:text="Email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:inputType="textEmailAddress"
            android:textSize="16dp"
            android:textColorHint="@color/sec_blue"
            android:textColor="@color/black"
            android:paddingVertical="13dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/helvetica"
            android:hint="Masukkan Email"
            android:background="@drawable/bg_corner_radius_all_input"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/dark_blue"
            android:textSize="14dp"
            android:text="Password" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/etPassword"
                android:textSize="16dp"
                android:textColorHint="@color/sec_blue"
                android:textColor="@color/black"
                android:paddingVertical="13dp"
                android:paddingLeft="20dp"
                android:paddingRight="48dp"
                android:fontFamily="@font/helvetica"
                android:hint="Masukkan Password"
                android:background="@drawable/bg_corner_radius_all_input" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ivTogglePassword"
                android:layout_alignEnd="@+id/etPassword"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/_eye" />

        </RelativeLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_radius_full_all_fill_blue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/helvetica_bold"
        android:paddingHorizontal="16dp"
        android:text="Daftar"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:textColor="@color/sec_blue"
            android:textSize="14dp"
            android:layout_marginRight="4dp"
            android:text="Apakah anda sudah punya akun ?" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLogin"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/blue"
            android:textSize="14dp"
            android:text="@string/under_masuk" />

    </LinearLayout>

</LinearLayout>