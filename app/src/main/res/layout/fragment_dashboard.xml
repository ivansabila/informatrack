<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingHorizontal="28dp"
    tools:context=".view.activity.dashboard.admin.fragments.DashboardFragment">


    <!-- start header -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_marginBottom="28dp" >

        <!-- start title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_bold"
                android:textColor="@color/dark_blue"
                android:textSize="28dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Hai Admin!" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica"
                android:textColor="@color/sec_blue"
                android:layout_marginTop="-4dp"
                android:textSize="16dp"
                android:text="Selamat Pagi" />

        </LinearLayout>
        <!-- end title -->

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notification"
            android:padding="8dp"
            android:background="@drawable/bg_corner_radius_all_fill_sec_white"/>

    </LinearLayout>
    <!-- end header -->

    <!--  start main button  -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">

        <!--  start user submission button  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/llUserSubmission"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:padding="12dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_corner_radius_all_fill_sec_white" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_bold"
                android:textColor="@color/dark_blue"
                android:textSize="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Pengajuan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chevron_up"
                    android:padding="8dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_corner_radius_all_fill_white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvUserNotApproved"
                            android:fontFamily="@font/helvetica_bold"
                            android:textColor="@color/dark_blue"
                            android:textSize="28dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginRight="4dp"
                            android:text="23" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvUser"
                            android:fontFamily="@font/helvetica"
                            android:textColor="@color/sec_blue"
                            android:layout_marginTop="-10dp"
                            android:textSize="12dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="+1234" />


                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica"
                        android:textColor="@color/sec_blue"
                        android:layout_marginTop="-10dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Pengguna" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <!--  end user submission button  -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:visibility="invisible" />

    </GridLayout>
    <!--  end main button  -->

</LinearLayout>